{
    "compilerOptions": {
        "target": "ES5",
        "module": "esnext",
        "strict": true,
        "types": [
            "workers-types",
            "node"
        ],
        "lib": [
            "ESNext",
            "WebWorker"
        ],
        "moduleResolution": "NodeNext",
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
}